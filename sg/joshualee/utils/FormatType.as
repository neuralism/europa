package sg.joshualee.utils{	import flash.text.*;	import flash.text.TextField;	import flash.text.TextFormat;	import flash.text.TextFormatAlign;		/**	 * ...	 * @author Joshua Lee	 */	public class FormatType	{		public function FormatType()		{					}				public static function stylise(			tf:TextField,			typeface:String,			size:Number = 10, 			colour:* = 0x000000,			letterSpacing:Number = 0, 			leading:Number = 0,			align:String = "left"):void		{			var format:TextFormat = new TextFormat();						format.font = typeface;			format.color = colour;			format.size = size;			format.letterSpacing = letterSpacing;			format.leading = leading;						if (align == "left") format.align = TextFormatAlign.LEFT;			if (align == "right") format.align = TextFormatAlign.RIGHT;			if (align == "center") format.align = TextFormatAlign.CENTER;						tf.embedFonts = true;			tf.setTextFormat(format);			tf.defaultTextFormat = format;	/*		tf.autoSize = TextFieldAutoSize.LEFT;			tf.antiAliasType = AntiAliasType.ADVANCED;			tf.selectable = false;					tf.multiline = true;			tf.wordWrap = true;			tf.condenseWhite = false;*/		}				public static function configure(			tf:TextField,			condenseWhite = false,			multiline = true,			wordWrap = true,			selectable = false					):void		{			tf.condenseWhite = condenseWhite;			tf.multiline = multiline;			tf.wordWrap = wordWrap;			tf.selectable = selectable			tf.autoSize = TextFieldAutoSize.NONE,			tf.antiAliasType = AntiAliasType.ADVANCED		}	}	}