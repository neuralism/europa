package  {		import com.greensock.TweenMax;	import com.greensock.TimelineMax;	import com.greensock.easing.*;	import sg.joshualee.utils.Typer;	import flash.display.MovieClip;	import flash.utils.setInterval;	import flash.utils.clearInterval;	import flash.utils.getQualifiedClassName;		public class Home extends MovieClip {		public var copy:Array = ["Jupiter's Secret Ocean Moon", "Its entire surface is beautifully composed of an icey shell", "Astronomists believe that there is an hidden ocean beneath", "It is the prime candidate for finding life in the solar system", "Europa was first discovered in 1610 by Galileo Galilei", "It is 1 of Jupiter's 4 Galilean Moons: Io, Ganymede and Callisto", "Which together are among Jupiter's 64 moons", "And of 166 known moons in the entire solar system"];		public var tl:TimelineMax = new TimelineMax({});		public var interval:uint;		public var flag:Boolean = true;				public function Home() 		{			init();		}				public function init():void		{			register();			reset();			transitIn();		}				// Register.POSTITIONS		public function register():void		{			europa_mc.default_y = europa_mc.y;		}				// Reset.POSITIONS		public function reset():void		{			TweenMax.killTweensOf(this);			europa_mc.y = europa_mc.default_y + 10;			europa_mc.alpha = 0.0;			jupiter_mc.alpha = 0.0;			title_mc.alpha = 0;0;			line_mc.scaleX = 0;			tf.text = "";			flag = true;			info_mc.strip0.text = info_mc.strip1.text = "";			info_mc.strip0.y = 0;			info_mc.strip1.y = 27;			clearInterval(interval);		}				public function infoDisplay():void		{			var i:int = 0;			var strip_a = info_mc.strip0;			var strip_b = info_mc.strip1;			interval = setInterval(slide, 4500);						slide();			function slide():void			{				if (flag)				{					strip_b.text = copy[i];					TweenMax.to(strip_a, 1, { y: -27, ease: Expo.easeOut });					TweenMax.to(strip_b, 1, { y: 0, ease: Expo.easeOut, onComplete: shiftStrip });				}								else				{					strip_a.text = copy[i];					TweenMax.to(strip_b, 1, { y: -27, ease: Expo.easeOut });					TweenMax.to(strip_a, 1, { y: 0, ease: Expo.easeOut, onComplete: shiftStrip });				}								if (i == copy.length - 1)					i = 0;				else					i++;			}						function shiftStrip():void			{				if (flag)					strip_a.y = 27;				else 					strip_b.y = 27;								flag = !flag;			}		}				// Transition.IN		public function transitIn():void		{			reset();			TweenMax.to(europa_mc, 1.0, { alpha: 1.0, y: europa_mc.default_y, ease: Expo.easeOut });			TweenMax.to(jupiter_mc, 1.5, { alpha: 1.0, ease: Expo.easeOut, delay: 0.95 });			TweenMax.to(line_mc, 0.25, { scaleX: 1.0, ease: Expo.easeOut, delay: 0.25, onComplete: infoDisplay });			TweenMax.to(title_mc, 1.0, { alpha: 1.0, ease: Expo.easeOut, delay: 0.45 });		}				public function resize():void		{					}				public function transitInComplete():void		{					}				// Transition.OUT		public function transitOut():void		{					}		public function transitOutComplete():void		{					}	}}