package  {		import com.greensock.TweenMax;	import com.greensock.easing.*;	import sg.joshualee.utils.MouseEvents;	import flash.display.MovieClip;	import flash.events.MouseEvent;		public class Navigation extends MovieClip {				public var btnList:Array;		public var btnPositions:Array = [];		public var btnFunctions:Array;				public function Navigation() 		{			init();		}				public function init():void		{			register();			reset();		}				public function register():void		{			// Settings			btnList = [home_btn, structure_btn, orrery_btn];			btnFunctions = [handler, handler, handler];						for (var i:* in btnList)			{				btnPositions.push([btnList[i].x, btnList[i].y]);				btnList[i].id = int(i);								MouseEvents.typical(btnList[i], handler);			}		}				// Reset.POSITIONS		public function reset():void		{			for (var i:int = 0; i < btnList.length; i++)			{				btnList[i].icon.alpha = 0.5;			}		}				// Events		public function handler(event:MouseEvent):void 		{			var target:Object = event.currentTarget;			var id:int = event.currentTarget.id;						if (event.type == MouseEvent.ROLL_OVER)				TweenMax.to(target, 0.75, { tint: 0x00E6FF, ease: Expo.easeOut });				TweenMax.to(target.icon, 0.75, { alpha: 1.0, ease: Expo.easeOut });										if (event.type == MouseEvent.ROLL_OUT)			{					TweenMax.to(target, 0.75, { removeTint: true, ease: Expo.easeOut });				TweenMax.to(target.icon, 0.75, { alpha: 0.5, ease: Expo.easeOut });			}						if (event.type == MouseEvent.CLICK)				Object(parent).loadPage(id);		}				// Transition.IN		public function update():void		{			for (var i:* in btnList)			{				var target:* = btnList[i];								if (!target.hasEventListener(MouseEvent.ROLL_OVER) 					&& !target.hasEventListener(MouseEvent.ROLL_OUT) 					&& !target.hasEventListener(MouseEvent.CLICK))				{					target.addEventListener(MouseEvent.ROLL_OVER, btnFunctions[i]);					target.addEventListener(MouseEvent.ROLL_OUT, btnFunctions[i]);					target.addEventListener(MouseEvent.CLICK, btnFunctions[i]);					target.buttonMode = true;					TweenMax.to(target, 0.75, { removeTint: true, ease: Expo.easeOut });					TweenMax.to(target.icon, 0.75, { alpha: 0.5, ease: Expo.easeOut });				}												if (i == Object(parent).curPage)				{					target.removeEventListener(MouseEvent.ROLL_OVER, btnFunctions[i]);					target.removeEventListener(MouseEvent.ROLL_OUT, btnFunctions[i]);					target.removeEventListener(MouseEvent.CLICK, btnFunctions[i]);					target.buttonMode = false;					TweenMax.to(target, 0.75, { tint: 0x00E6FF, ease: Expo.easeOut });					TweenMax.to(target.icon, 0.75, { alpha: 1.0, ease: Expo.easeOut });				}			}		}				public function transitIn():void		{					}				public function transitInComplete():void		{					}				// Transition.OUT				public function transitOut():void		{					}		public function transitOutComplete():void		{					}	}}